#SimpleChatbot.py

class SimpleChatbot:
    def __init__(self):
        self.responses = {
            "hello": "Hello! How can I help you?",
            "how are you": "I'm just a bot, but I'm functioning as expected!",
            "what is your name": "I'm a simple chatbot created by you.",
            "bye": "Goodbye! Have a great day!"
        }

    def get_response(self, user_input):
        return self.responses.get(user_input.lower(), "I'm sorry, I don't understand that.")


#main.py


from chatbot_module import SimpleChatbot

def main():
    bot = SimpleChatbot()
    print("Chatbot: Hello! Ask me something. Type 'bye' to exit.")

    while True:
        user_input = input("You: ")
        response = bot.get_response(user_input)
        print("Chatbot:", response)
        
        if user_input.lower() == "bye":
            break

if __name__ == "__main__":
    main()